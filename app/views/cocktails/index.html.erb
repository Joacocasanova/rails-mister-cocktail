<div class="container">
<h1 class="title">Mistercocktail</h1>
</div>

<div class="container mt-3">
  <div class="row">
  <% @cocktails.each do |cocktail| %>
  <div class="col-6 col-md-4 col-lg-3 mt-3">
    <div class="card">
      <img class="card-img-top" src=<%= cl_image_path cocktail.photo.key, height: 300, width: 400, crop: :fill %> alt="Cocktail image">
      <div class="card-body bg-light">
        <h5 class="card-title"> <strong><%= link_to cocktail.name, cocktail_path(cocktail) %></h5></strong>
      </div>
    </div>
  </div>
  <% end %>
  </div>
</div>
