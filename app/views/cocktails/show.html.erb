<div class="banner d-flex justify-content-center align-items-center" style="background-image: url(<%= cl_image_path @cocktail.photo.key, height: 300, width: 400, crop: :fill %>);">
  <div>
    <h1><%= @cocktail.name %></h1>
  </div>
</div>

<div class="d-flex justify-content-around m-3">
  <div class="ml-3">
    <h2>Ingredients</h2>
    <ul><% @cocktail.doses.each do |dose| %>
      <li><%= dose.description %> = <%= dose.ingredient.name %>
      <%= link_to "Delete", dose_path(dose), method: :delete, data: { confirm: 'are you sure?' } %></li>
      <% end %>
    </ul>
  </div>
  <div class="container">
    <h1>Add Doses</h1>
    <%= render 'doses/new' %>
  </div>
</div>